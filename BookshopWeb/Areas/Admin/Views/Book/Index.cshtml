@{
    ViewData["Title"] = "Books";
}

@Html.AntiForgeryToken()

<div class="container p-3">
    <div class="row py-4">
        <div class="col-6">
            <h2 class="display-6 text-white">Books List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Upsert" class="btn btn-success mt-2 me-1">Create new</a>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <table class="table table-default table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>ISBN</th>
                        <th>Author</th>
                        <th>List Price</th>
                        <th>Category</th>
                        <th>Cover Type</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>