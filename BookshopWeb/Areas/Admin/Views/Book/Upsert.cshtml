@model BookViewModel

@{
    ViewData["Title"] = Model.Book.Id != 0 ? "Update book" : "Create book";
}
<div class="container">
    <div class="row justify-content-center border p-3 mt-4 mx-auto">
        <form method="post" asp-action="Upsert" enctype="multipart/form-data">

            <div class="row">
                <h2 class="text-white">@(Model.Book.Id != 0 ? "Update the book" : "Create a new book")</h2>
                <hr />
            </div>

            <div class="row justify-content-center mb-4">
                <div class="col-8">
                    <input hidden type="hidden" asp-for="Book.Id" />
                    <input hidden type="hidden" asp-for="Book.ImageUrl" />
                    <label asp-for="Book.Title"></label>
                    <input asp-for="Book.Title" class="form-control" />
                    <span asp-validation-for="Book.Title" class="text-danger"></span>
                </div>
            </div>

            <div class="row justify-content-center mb-4">
                <div class="col-8">
                    <label asp-for="Book.Description"></label>
                    <textarea asp-for="Book.Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Book.Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row justify-content-center mb-4">
                <div class="col-8">
                    <label asp-for="Book.Author"></label>
                    <input asp-for="Book.Author" class="form-control" />
                    <span asp-validation-for="Book.Author" class="text-danger"></span>
                </div>
            </div>

            <div class="row justify-content-center mb-4">
                <div class="col-4">
                    <label asp-for="Book.ISBN"></label>
                    <input asp-for="Book.ISBN" class="form-control" />
                    <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Book.ImageUrl"></label>
                    <input type="file" asp-for="Book.Image" id="file" accept="image/*" class="form-control" onchange="preview()" />
                    <div id="imagePreview" class="mt-4">
                        @if(Model.Book.ImageUrl != null)
                        {
                            <img width="100%" src="@Model.Book.ImageUrl" alt="book cover" />
                        }
                    </div>
                </div>
            </div>
            <div class="row justify-content-center mb-4">
                <div class="col-4">
                    <label asp-for="Book.Price"></label>
                    <input asp-for="Book.Price" class="form-control" />
                    <span asp-validation-for="Book.Price" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Book.ListPrice"></label>
                    <input asp-for="Book.ListPrice" class="form-control" />
                    <span asp-validation-for="Book.ListPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-center mb-4">
                <div class="col-4">
                    <label asp-for="Book.CategoryId"></label>
                    <select asp-for="Book.CategoryId" asp-items="@Model.CategoryList" class="form-select">
                        <option disabled selected>Select category</option>
                    </select>
                    <span asp-validation-for="Book.CategoryId" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="Book.CoverTypeId"></label>
                    <select asp-for="Book.CoverTypeId" asp-items="@Model.CoverTypeList" class="form-select">
                        <option disabled selected>Select cover type</option>
                    </select>
                    <span asp-validation-for="Book.CoverTypeId" class="text-danger"></span>
                </div>
            </div>

            @if(Model.Book.Id != 0)
            {
                <button type="submit" class="btn btn-success">Save</button>
            }
            else
            {
                <button type="submit" onclick="return validateInput()" class="btn btn-success">Create</button>
            }

            <a asp-controller="Book" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>


@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script type="text/javascript">

        function validateInput() {

            const fileInput = document.getElementById('file');
            const filePath = fileInput.value;

            if (filePath == '') {
                Swal.fire({
                  icon: 'error',
                  title: 'Oops...',
                  text: 'Please upload an image of your book cover.',
                });
                return false;
            }

            return true;
        }

        function preview() {
            const fileInput = document.getElementById('file');

            const filePath = fileInput.value;

            if (filePath == '') {
                Swal.fire({
                  icon: 'error',
                  title: 'Oops...',
                  text: 'Please upload an image of your book cover.',
                });
                document.getElementById('imagePreview').innerHTML = '';
                return false;
            }

            const allowedExtensions = /(\.tiff|\.jfif|\.bmp|\.pjp|\.apng|\.gif|\.svg|\.png|\.xbm|\.dib|\.jxl|\.jpeg|\.svgz|\.jpg|\.webp|\.ico|\.tif|\.pjpeg|\.avif)$/i;

            if (allowedExtensions.exec(filePath) && fileInput.files && fileInput.files[0]) {
                
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').innerHTML =
                        '<img width="100%" src="' + e.target.result + '" alt="book cover" />';
                };

                reader.readAsDataURL(fileInput.files[0]);
                return true;
            } else {
                fileInput.value = '';
                document.getElementById('imagePreview').innerHTML = '';
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'This file extension is not supported.',
                });
                return false;
            }

        }
    </script>
}

