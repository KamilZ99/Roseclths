@model CoverType

@{
    ViewData["Title"] = "New cover type";
}

<div class="container">
    <div class="row">
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row">
                    <h2 class="text-white">Edit the cover type</h2>
                    <hr />
                </div>
                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Save</button>
                <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

