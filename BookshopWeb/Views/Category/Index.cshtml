@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row py-4">
        <div class="col-6">
            <h2 class="display-6 text-white">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success mt-2 me-1">Create new</a>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <table class="table table-default table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td width="50%" class="align-middle">@category.Name</td>
                            <td width="30%" class="align-middle">@category.DisplayOrder</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning ms-1" title="Edit"><i class="bi bi-pencil-square"></i></a>
                                    <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@category.Id"><i class="bi bi-trash-fill"></i></a>

                                    <div class="modal fade" id="exampleModal-@category.Id" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Delete category</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to remove @category.Name?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <a onclick="deleteData('/category/delete/@category.Id')" class="btn btn-danger">Delete</a>
                                                    @Html.AntiForgeryToken()
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>