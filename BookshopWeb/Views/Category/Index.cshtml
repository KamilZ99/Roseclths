@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row py-4">
        <div class="col-6">
            <h2 class="display-6 text-white">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-success mt-2 me-1">Create new</a>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <table class="table table-default table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td width="50%">@category.Name</td>
                            <td width="30%">@category.DisplayOrder</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>