@{
    ViewData["Title"] = "Companies";
}

@Html.AntiForgeryToken()

<div class="container p-3">
    <div class="row py-4">
        <div class="col-6">
            <h2 class="display-6 text-white">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-success mt-2 me-1">Create new</a>
        </div>
    </div>


    <div class="row">
        <div class="col-12">
            <table id="dataTable" class="table table-default table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Street</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Postal Code</th>
                        <th>Phone Number</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/company.js"></script>
}