@model Company

@{
    ViewData["Title"] = Model.Id != 0 ? "Update company" : "Create company";
}
<div class="container">
    <div class="row justify-content-center border p-3 mt-4 mx-auto">
        <form method="post" asp-action="Upsert" enctype="multipart/form-data">

            <div class="row">
                <h2 class="text-white">@(Model.Id != 0 ? "Update the company" : "Create a new company")</h2>
                <hr />
            </div>

            <div class="row justify-content-center mb-4">
                <div class="col-8">
                    <input hidden type="hidden" asp-for="Id" />
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row justify-content-center mb-4">
                <div class="col-8">
                    <label asp-for="Street"></label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
            </div>

            <div class="row justify-content-center mb-4">
                <div class="col-4">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="State"></label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>

            <div class="row justify-content-center mb-4">
                <div class="col-4">
                    <label asp-for="PostalCode"></label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="col-4">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            

            @if(Model.Id != 0)
            {
                <button type="submit" class="btn btn-success">Save</button>
            }
            else
            {
                <button type="submit" class="btn btn-success">Create</button>
            }

            <a asp-controller="Company" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>


@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

