@{
    ViewData["Title"] = "Orders";
}

@Html.AntiForgeryToken()


<div class="row mt-4">
    <h2 class="display-6 text-white">Order List</h2>
</div>

<div class="row mt-4">
    <div class="col-12">
        <table id="dataTable" class="table table-default table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Order Status</th>
                    <th>Order Total</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts
{
    @if (User.IsInRole("Admin"))
    {
        <script src="~/js/orderAdmin.js"></script>
    }
    else
    {
        <script src="~/js/order.js"></script>
    }
}